<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/actionsheet_top_normal"
        android:gravity="center"
        android:minHeight="45dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/sLayout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none">

        <LinearLayout
            android:id="@+id/lLayout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_sex_man"
                android:background="@drawable/actionsheet_single_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="男"
                android:padding="5dp"

                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#FD4A2E"/>
            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_color_20"/>
            <TextView
                android:id="@+id/tv_sex_wuman"
                android:background="@drawable/actionsheet_single_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="女"
                android:padding="5dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#FD4A2E"/>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/txt_cancel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/actionsheet_single_selector"
        android:gravity="center"
        android:text="取消"
        android:textColor="#2298EF"
        android:textSize="16sp" />

</LinearLayout>