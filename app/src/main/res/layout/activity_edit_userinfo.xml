<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black_two"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/include_title_bar" />

    <View
        app:layout_constraintTop_toBottomOf="@+id/title_bar"
        android:id="@+id/view_edit_view"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/view_back"/>



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_iv_edit_avatar"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginTop="18dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_me_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_edit_view"
         />
    
    <Button
        android:id="@+id/btn_edit_photo"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:background="@drawable/btn_white_shape_no_solid"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:text="@string/edit_photo"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circle_iv_edit_avatar"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_edit_photo">
        <RelativeLayout
            android:id="@+id/rl_edit_nickname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            >

            <TextView
                android:id="@+id/tv_edit_nickname_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:textColor="@color/white"/>


            <TextView
                android:id="@+id/tv_edit_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:textColor="#66FFFFFF"
                android:drawablePadding="6dp"
                android:drawableRight="@drawable/icon_me_arrow"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_back"
                android:layout_alignParentBottom="true"/>


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_edit_gender"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:textColor="@color/white"/>


            <TextView
                android:id="@+id/tv_edit_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:textColor="#66FFFFFF"
                android:drawablePadding="6dp"
                android:drawableRight="@drawable/icon_me_arrow"/>





            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_back"
                android:layout_alignParentBottom="true"/>


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_edit_address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地区"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:textColor="@color/white"/>


            <TextView
                android:id="@+id/tv_edit_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:textColor="#66FFFFFF"
                android:drawablePadding="6dp"
                android:drawableRight="@drawable/icon_me_arrow"/>





            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_back"
                android:layout_alignParentBottom="true"/>


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_edit_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个性签名"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:textColor="@color/white"/>


            <TextView
                android:id="@+id/tv_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:textColor="#66FFFFFF"
                android:drawablePadding="6dp"
                android:drawableRight="@drawable/icon_me_arrow"/>





            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_back"
                android:layout_alignParentBottom="true"/>


        </RelativeLayout>
    </LinearLayout>




</android.support.constraint.ConstraintLayout>